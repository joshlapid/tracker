<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @animal.name %>
</p>

<p>
  <strong>Latin name:</strong>
  <%= @animal.latin_name %>
</p>

<p>
  <strong>Kingdom:</strong>
  <%= @animal.kingdom %>
</p>

<% sighting_list = Sighting.where(animal_id:  @animal.id)%>

<p>
  <strong>Sightings:</strong>
    <ul>
      <% sighting_list.each do |sighting| %>
        <li>
          <a href="/sightings/<%= sighting.id %>"><%= sighting.date%></a>
        </li>
      <% end %>
    </ul>
</p>
<%= link_to 'Edit', edit_animal_path(@animal) %> |
<%= link_to 'Back', animals_path %>
